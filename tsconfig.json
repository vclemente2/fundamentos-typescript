{
    "compilerOptions": {
        "outDir": "app/dist/js",
        "target": "ES2022",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "esModuleInterop": true,
        "alwaysStrict": true

    },
    "include": ["app/**/*"]
}